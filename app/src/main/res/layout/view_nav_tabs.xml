<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/nav_button_holder"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        tools:background="@android:color/black">

        <ImageButton
            android:id="@+id/circle_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/btn_circle"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/chat_btn"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/circle_btn"
            android:layout_toLeftOf="@+id/circle_btn"
            android:layout_marginTop="30dp"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            android:src="@drawable/nav_chat"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/groups_btn"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/circle_btn"
            android:layout_toEndOf="@+id/circle_btn"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/nav_groups"
            android:background="@android:color/transparent"
            android:visibility="gone"/>
    </RelativeLayout>
</layout>