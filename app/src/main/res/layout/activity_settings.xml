<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="org.socratic.android.activities.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/onboarding_bg">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purpleStandard"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_gravity="center"
                fontPath="fonts/cerapro-regular.otf"/>

        </android.support.v7.widget.Toolbar>

        <Button
            android:id="@+id/acknowledgements_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:gravity="start|center_vertical"
            android:textColor="@android:color/black"
            android:text="@string/acknowledgements"
            android:background="@color/onboarding_bg"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            fontPath="fonts/cerapro-regular.otf" />

    </LinearLayout>

</layout>
